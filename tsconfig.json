{
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "noImplicitAny": false,
        "jsx": "preserve",
        "paths": {
            "@/*": ["src/*"]
        },
        "rootDir": "src",
        "outDir": "./dist",
        "declaration": true
    },
    "include": ["./src/**/*.ts"]
}
